<h2>All Articles</h2>
<table class="primary">
  <thead>
    <tr>
      <th {{action 'setSortBy' 'description'}}>Description</th>
      <th {{action 'setSortBy' 'notes'}}>Notes</th>
      <th>Borrowed by</th>
      <th {{action 'setSortBy' 'createdAt'}}>Borrowed since</th>
      <th>Show Returned{{input type="checkbox" checked=showReturned}}</th>
      <th></th>  {{!-- edit / delete --}}
      <th></th>  {{!-- Saving ... --}}
    </tr>
  </thead>
  <tbody>
    {{!-- {{#each itemController='articles/item'}} --}}
    {{#each article in arrangedContent}}
    <tr>
      <td>{{article.description}}</td>
      <td>{{article.notes}}</td>
      <td>{{article.friend.fullName}}</td>
      <td>{{formatted-date article.createdAt 'LLL'}}</td>
      <td {{action 'save' article on='change'}}>{{view select content=states selection=article.state}}</td>
      <td>
        {{link-to '' 'all-articles.edit' article class="icon-pencil"}}
        {{!-- <a class="icon-pencil"></a> --}}
        <a href="#" class="icon-trash" {{action "delete" article}}></a>
      </td>
      <td>
        {{#if article.isSaving}}
        <p>Saving ...</p>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
